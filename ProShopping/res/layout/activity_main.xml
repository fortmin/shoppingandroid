<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pantalla"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
   
    <EditText
        android:id="@+id/textArea1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/pdf_hint"
        android:singleLine="false"
        android:lines="1"
        />
     <EditText
        android:id="@+id/textArea2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_below="@+id/textArea1"
        android:hint="@string/pdf_hint"
        android:singleLine="false"
        android:lines="1"
        />
      <EditText
        android:id="@+id/textArea3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_below="@+id/textArea2"
        android:hint="@string/pdf_hint"
        android:singleLine="false"
        android:lines="1"
        />

    <Button
        android:onClick="makeAndSharePDF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:layout_below="@+id/textArea3"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="38dp"
        android:text="@string/pdf_go" />
  

</RelativeLayout>