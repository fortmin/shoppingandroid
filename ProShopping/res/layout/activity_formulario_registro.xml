<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.fortmin.proshopping.FormularioRegistro"
    tools:ignore="MergeRootFrame" >

   <TextView
        android:id="@+id/tituloFormulario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_formulario"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />
           
     <TableLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="30dp"
         android:layout_below="@+id/tituloFormulario"
         android:layout_centerHorizontal="true" >
         <TableRow
             android:id="@+id/tableRow1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" >
             <EditText  
               android:id="@+id/registroemail"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:inputType="textEmailAddress"
               android:textColor="#000000" 
               android:textSize="40sp"   
               android:hint="@string/registro_email" 
            />
         </TableRow>

         <TableRow
             android:id="@+id/tableRow2"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" >
             <EditText
              android:id="@+id/registronombre"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#000000" 
              android:textSize="40sp"    
              android:hint="@string/registro_nombre"
       />
         </TableRow>

         <TableRow
             android:id="@+id/tableRow3"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" >
             <EditText
              android:id="@+id/registrousuario"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#000000" 
              android:textSize="40sp"    
              android:hint="@string/usuario"
            />
         </TableRow>

         <TableRow
             android:id="@+id/tableRow4"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" >
             <Button
              android:id="@+id/btnRegistro"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:textSize="30sp"
              android:text="@string/btn_registro" />
         </TableRow>
     </TableLayout>
     
     

</RelativeLayout>

